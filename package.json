{
  "name": "@web3-ui/root",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "author": "Developer DAO",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write",
    "build": "preconstruct build",
    "lint": "eslint packages/**/src/ --ext .ts,.tsx --config .eslintrc",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "jest --coverage --colors",
    "storybook": "start-storybook -p 9001 -s ./packages/components/src/assets -c .storybook",
    "postinstall": "preconstruct dev",
    "example": "yarn build && yarn workspace example dev",
    "build-storybook": "build-storybook",
    "chromatic": "chromatic  --exit-zero-on-changes",
    "publish:npm": "yarn build && yarn changeset publish"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "@preconstruct/cli": "^2.1.5",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "chromatic": "^6.1.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.3",
    "msw": "^0.35.0",
    "prettier": "^2.5.1",
    "ts-jest": "^26.4.4",
    "whatwg-fetch": "^3.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx,md,json}": [
      "prettier --write"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
